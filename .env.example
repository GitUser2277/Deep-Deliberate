# DeepDeliberate Framework Environment Configuration
# Copy this file to .env and fill in your actual values

# API Configuration
DEEPSEEK_API_KEY=example_key
DEEPSEEK_ENDPOINT=https://narot-md588xfo-swedencentral.services.ai.azure.com/models
DEEPSEEK_MODEL_NAME=DeepSeek-R1-0528

# Azure OpenAI Configuration
AZURE_OPENAI_API_KEY=example_key
AZURE_OPENAI_ENDPOINT=https://narot-md588xfo-swedencentral.openai.azure.com/
AZURE_OPENAI_API_VERSION=2025-01-01-preview
AZURE_OPENAI_DEPLOYMENT_NAME=o4-mini

# Security Settings
ENABLE_REQUEST_SIGNING=true
MAX_INPUT_LENGTH=1000
ENABLE_AUDIT_LOGGING=true
LOG_RETENTION_DAYS=30
VERIFY_SSL_CERTIFICATES=true

# Rate Limiting
#API_RATE_LIMIT_PER_MINUTE=60cle
#MAX_CONCURRENT_REQUESTS=5
#REQUEST_TIMEOUT_SECONDS=30

API_RATE_LIMIT_PER_MINUTE=15    # 1 request every 4 seconds (much slower)
MAX_CONCURRENT_REQUESTS=2       # Only 2 at once (less aggressive)  
REQUEST_TIMEOUT_SECONDS=60      # 60 seconds timeout (more patient)

# Agent Security
ENABLE_AGENT_VALIDATION=true
ALLOW_DANGEROUS_FUNCTIONS=false
SANDBOX_AGENT_EXECUTION=true

# Data Protection
ENABLE_DATA_REDACTION=true
ENCRYPT_LOGS=true
SECURE_SESSION_TOKENS=true